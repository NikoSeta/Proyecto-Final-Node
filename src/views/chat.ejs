<%- include('./partials/header.ejs') %>

<div class="container" style="padding-top: 20px ;">
    <div class="row">
        <div class="col">
            <form onsubmit="addMessage(this)">
                <div class="mb-3">
                    <label class="form-label">Mensaje...</label>
                    <textarea class="form-control" id="texto" rows="2"></textarea>
                </div>
                <div class="mb-3">
                    <label class="form-label">Usuario</label>
                    <input class="form-control" type="text" placeholder="User" aria-label="default input example">
                </div>
                <button type="submit" class="btn btn-warning">Enviar mensaje</button>
            </form>
        </div>
        <div class="col" style="background-color:white; border-radius: 15px;">
            <ul id="messages">
            </ul>
        </div>
    </div>
</div>

