<%- include('../partials/header.ejs') %>
<br>
<div class="container">
    <div class="row">
      <div class="col">
        <h3 style="
        color:#ffc107; 
        background-color: #212529; 
        padding-bottom: 8px;
        border-radius: 10px;">Cargar Productos</h3>
            <form class="prod-form" id="add" action="/productos" method="POST">
                <div class="d-flex flex-column align-items-center">
                    <input type="text" name="name" class="form-control" placeholder="Producto" style="margin-bottom: 10px;">
                    <input type="text" name="price" class="form-control" placeholder="Precio" style="margin-bottom: 10px;">
                    <input type="text" name="url" class="form-control" placeholder="Imágen" style="margin-bottom: 10px;">
                    <input type="number" name="stock" class="form-control" placeholder="Stock" style="margin-bottom: 10px;">
                    <button type="submit" class="btn btn-warning">Ingresar Producto</button>
                </div>
            </form>
      </div>
      <div class="col">
        <div>
            <h2 style="
                text-align: center;
                color:#ffc107; 
                background-color: #212529; 
                padding-bottom: 8px; 
                margin-bottom: 0px;
                border-radius: 10px 10px 0px 0px;"> Lista de Productos</h2>
            <% if (products.length > 0){ %> 
                <table class="table table-dark table-hover">
                    <tr>
                        <th><p>Producto</p></th>
                        <th><p>Precio</p></th>
                        <th><p>Foto</p></th>
                        <th></th>
                    </tr>
                    <%for(products of products){ %>
                     <tr>
                         <td><p><%=products.name %></p></td>
                         <td><p>$<%=products.price  %></p></td>
                         <td><img style="width: 55px; height: 55px;" src= <%=products.img  %> ></td>
                         <td><button type="button" class="btn btn-warning">Comprar</button></td>
                     </tr>
                    <% } %> 
                </table>
            <% } else { %>
                <p class="aler alert-warning">No se encontró productos</p>
            <% } %>
        </div>  
      </div>
    </div>
<%- include('../partials/footer.ejs') %>


